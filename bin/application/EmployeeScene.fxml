<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.EmployeeController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS" onMouseClicked="#handleRowSelection">
            <columns>
                <TableColumn fx:id="employeeIDColumn" text="Employee ID"/>
                <TableColumn fx:id="employeeNameColumn" text="Employee Name"/>
                <TableColumn fx:id="salaryColumn" text="Salary"/>
                <TableColumn fx:id="dateOfEmploymentColumn" text="Date of Employment"/>
            </columns>
        </TableView>
        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Employee ID:"/>
                <TextField fx:id="employeeIDField"/>
                <Label text="Employee Name:"/>
                <TextField fx:id="employeeNameField"/>
                <Label text="Salary:"/>
                <TextField fx:id="salaryField"/>
                <Label text="Date of Employment:"/>
                <DatePicker fx:id="dateOfEmploymentPicker"/>
            </VBox>
            <VBox spacing="10">
                <Button text="Add" onAction="#addEmployee"/>
                <Button text="Update" onAction="#updateEmployee"/>
                <Button text="Delete" onAction="#deleteEmployee"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
