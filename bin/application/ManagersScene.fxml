<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.ManagersController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <TableView fx:id="managerTable" VBox.vgrow="ALWAYS" onMouseClicked="#handleRowSelection">
            <columns>
                <TableColumn fx:id="employeeIDColumn" text="Employee ID"/>
                <TableColumn fx:id="monthlyReportColumn" text="Monthly Report"/>
            </columns>
        </TableView>
        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Employee ID:"/>
                <TextField fx:id="employeeIDField"/>
                <Label text="Monthly Report:"/>
                <TextField fx:id="monthlyReportField"/>
            </VBox>
            <VBox spacing="10">
                <Button text="Add" onAction="#addManager"/>
                <Button text="Update" onAction="#updateManager"/>
                <Button text="Delete" onAction="#deleteManager"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
