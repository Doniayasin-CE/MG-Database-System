<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.UserController">
    <content>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Number of available cars:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="availableCarsField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Number of sold cars:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="soldCarsField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Best selling type of car:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="bestSellingCarTypeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Best salesman:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="bestSalesmanField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Number of sales that classified as cash payment method:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="cashSalesField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Number of sales that classified as Installment Payments method:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="installmentSalesField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Service that was repeated most frequently:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="mostFrequentServiceField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="The most purchasing customer:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="topCustomerField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            </GridPane>

            <TableView fx:id="availableCarsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="carIDColumn" text="Car ID"/>
                    <TableColumn fx:id="carModelColumn" text="Car Model"/>
                    <TableColumn fx:id="carTypeColumn" text="Car Type"/>
                    <TableColumn fx:id="carColorColumn" text="Car Color"/>
                    <TableColumn fx:id="carStatusColumn" text="Car Status"/>
                </columns>
            </TableView>

            <Label text="Enter your NIN number:"/>
            <HBox spacing="10">
                <TextField fx:id="ninInputField"/>
                <Button text="Search" onAction="#handleNINSearch"/>
            </HBox>

            <GridPane fx:id="serviceGridPane" hgap="10" vgap="10" visible="false">
                <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="customerIDField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Car ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="carIDField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Service Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="serviceDescriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Button text="Service" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#handleService"/>
            </GridPane>
        </VBox>
    </content>
</ScrollPane>
