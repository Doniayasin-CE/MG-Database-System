<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="678.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CustomerController">
   <children>
      <VBox layoutX="10.0" layoutY="30.0" prefHeight="200.0" prefWidth="120.0" spacing="15.0">
         <children>
            <Label text="Customer ID">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="Customer Name">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="Email">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="NIN">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="Phone">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
      
      <VBox layoutX="140.0" layoutY="30.0" prefHeight="200.0" prefWidth="150.0" spacing="10.0">
         <children>
            <TextField fx:id="customarIDField" promptText="Customer ID" prefHeight="32.0" prefWidth="150.0" />
            <TextField fx:id="customarNameField" promptText="Customer Name" prefHeight="32.0" prefWidth="150.0" />
            <TextField fx:id="emailField" promptText="Email" prefHeight="32.0" prefWidth="150.0" />
            <TextField fx:id="NINField" promptText="NIN" prefHeight="32.0" prefWidth="150.0" />
            <TextField fx:id="phoneField" promptText="Phone" prefHeight="32.0" prefWidth="150.0" />
         </children>
      </VBox>

      <TableView fx:id="customerTable" layoutX="310.0" layoutY="30.0" onMouseClicked="#handleRowSelection" prefHeight="297.0" prefWidth="350.0">
         <columns>
            <TableColumn fx:id="customarIDColumn" prefWidth="75.0" text="Customer ID" />
            <TableColumn fx:id="customarNameColumn" prefWidth="100.0" text="Customer Name" />
            <TableColumn fx:id="emailColumn" prefWidth="100.0" text="Email" />
            <TableColumn fx:id="NINColumn" prefWidth="75.0" text="NIN" />
         </columns>
      </TableView>

      <TableView fx:id="phoneTable" layoutX="310.0" layoutY="340.0" prefHeight="200.0" prefWidth="350.0">
         <columns>
            <TableColumn fx:id="phoneCustomerIDColumn" prefWidth="75.0" text="Customer ID" />
            <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Phone" />
         </columns>
      </TableView>

      <Button fx:id="addButton" layoutX="140.0" layoutY="240.0" mnemonicParsing="false" onAction="#addCustomer" prefHeight="26.0" prefWidth="78.0" text="Add" />
      <Button fx:id="updateButton" layoutX="230.0" layoutY="240.0" mnemonicParsing="false" onAction="#updateCustomer" prefHeight="26.0" prefWidth="78.0" text="Update" />
      <Button fx:id="deleteButton" layoutX="320.0" layoutY="240.0" mnemonicParsing="false" onAction="#deleteCustomer" prefHeight="26.0" prefWidth="78.0" text="Delete" />
      <Button fx:id="addPhoneButton" layoutX="140.0" layoutY="480.0" mnemonicParsing="false" onAction="#addPhone" prefHeight="26.0" prefWidth="78.0" text="Add Phone" />
      <Button fx:id="updatePhoneButton" layoutX="230.0" layoutY="480.0" mnemonicParsing="false" onAction="#updatePhone" prefHeight="26.0" prefWidth="78.0" text="Update Phone" />
      <Button fx:id="deletePhoneButton" layoutX="320.0" layoutY="480.0" mnemonicParsing="false" onAction="#deletePhone" prefHeight="26.0" prefWidth="78.0" text="Delete Phone" />
      
      <Label layoutX="310.0" layoutY="5.0" text="Customer Table">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="310.0" layoutY="315.0" text="Phone Table">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
